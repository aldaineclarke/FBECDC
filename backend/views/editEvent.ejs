    <%- include("_adminHeader")%>
    <!-- Content Area -->
    <div class="container-fluid">
        <!-- Event form -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/admin/event/edit/<%= event.id %>?_method=PUT" method="POST" class="mt-3 p-2 border bg-white">
                    <legend class="pl-2">Edit Event</legend>
                    <label for="title">Title</label>
                    <input class="form-control" type="text" name="title" id="title" value="<%= event.title %>">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" class="form-control"><%= event.description %></textarea>
                    <label for="title">Start Date</label>
                    <input class="form-control" type="date" name="start" id="start" value="<%= event.start %>"" required>                            
                    <label for="title">End Date</label>
                    <input class="form-control" type="date" name="end" id="end"  required>
                    <div class="mt-3">
                        <button class="btn btn-success btn-sm">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End Content Area -->

<%- include("_adminFooter")%>
