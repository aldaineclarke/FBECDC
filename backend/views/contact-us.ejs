<%- include("_header");%>

<main class="container">
    <section class="row">
        <div class="content">
            <h1 class="text-center">Contact Us</h1>
            <div class="grid-container">
                <form method="POST" id="contactForm">
                    <h2>We are waiting to hear from you.</h2>
                    <div class="mt-1" style="margin-top: 3rem;">
                        <label>
                            <span>Name:</span>
                            <input class="form-control" type="text" id="name" name="name">
                        </label>
                    
                        <label>
                            <span>Email:</span>
                            <input class="form-control" type="email" id="email" name="email">
                        </label>
                        
                        <label>
                            <span>Telephone:</span>  
                            <input class="form-control" type="tel" id="telephone" name="tel">
                        </label>
                    
                        <label for="contactMessage">
                            <span>Message/Comment:</span>
                            <textarea class="form-control" name="message" id="contactMessage"  placeholder="Enter a Message"></textarea>
                        </label>
                    </div>

                    <div class="mt-1 text-right">
                        <input class="btn btn--primary" type="submit" value="Send Message">
                    </div>
                    
                
                </form>
                <div class="contact-info">
                    <div class="contact">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10189.173297840342!2d-76.93724553734039!3d17.995222481308417!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8edb13167548b883%3A0x7b2fc1c93e5a0489!2sFirst%20Born%20Early%20Childhood%20Development%20Centre!5e0!3m2!1sen!2sjm!4v1632622091536!5m2!1sen!2sjm" width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                    <div class="contact mt-1">
                        <h2>Email:</h2>
                        <p>firstborn@gmail.com</p>
                    </div>
                    <div class="contact">
                        <h2>Address:</h2>
                        <p>Twickenham Park, New Nursery,
                            Spanish Town, St. Catherine.</p>
                    </div>
                    <div class="contact">
                        <h2>Telephone:</h2>
                        <p>(876)790-5361</p>
                    </div>
                    
                </div>
             </div>
        </div>
        
        
    </section>
</main>
<%- include("_footer");%>